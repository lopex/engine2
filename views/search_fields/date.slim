.col-lg-3.col-md-4.col-sm-4 ng-init="value = value || {}"
  .form-group
    .input-group.input-group-sm
      input.btn.btn-default [
        type="text"
        class="form-control"
        placeholder="{{::field.loc}}"
        ng-model="value.at"
        xng-change="action.search_field_change(f)"
        data-date-format="{{::field.render.format}}"
        data-animation="{{::field.render.animation}}"
        bs-datepicker=""
        e2-datepicker=""
        e2-model-format="{{::field.render.model_format}}"
        data-autoclose="1"
        e2-search-field=""
      ]
      .input-group-btn
        a.btn.btn-default data-toggle="datepicker"
          span ng-bind-html="::action.meta.search_calendar_icon"
        a.btn.btn-default ng-disabled="!action.query.search[f]" ng-click="value.at = null; action.query.search[f] = null; action.search_field_change(f)"
          span ng-bind-html="::action.meta.search_reset_icon"
