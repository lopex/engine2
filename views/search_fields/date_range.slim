span ng-init="action.query.search[f] = action.query.search[f] || {}; value = value || {}"
  .col-lg-3.col-md-4.col-sm-4
    .form-group
      .input-group.input-group-sm
        input.btn.btn-default [
          type="text"
          class="form-control"
          placeholder="{{::field.loc}} <"
          ng-model="value.from"
          xng-change="action.search_field_change(f)"
          data-max-date="{{value.to}}"
          data-date-format="{{::field.render.format}}"
          data-animation="{{::field.render.animation}}"
          bs-datepicker=""
          e2-datepicker="from"
          e2-model-format="{{::field.render.model_format}}"
          data-autoclose="1"
          e2-search-field=""
        ]
        .input-group-btn
          a.btn.btn-default data-toggle="datepicker": span.glyphicon.glyphicon-calendar
          a.btn.btn-default ng-disabled="!action.query.search[f].from" ng-click="value.from = null; action.query.search[f].from = null; action.search_field_change(f)": span.glyphicon.glyphicon-off

