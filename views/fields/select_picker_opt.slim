e2-action action="[action.meta.info[f].assoc, 'list']"
  .col-lg-7.col-md-12.col-sm-12
    .input-group.input-group-sm
      select.btn.btn-default.btn-sm [
        ng-init="info = action.meta.info[f]"
        ng-model="action.selected"
        ng-options="v.id as v.value for v in action.values"
        ng-change="action.change()"
        ng-disabled="info.disabled"
        ng-class="info.render.class"
        class="form-control"
        e2-field=""
      ]
      .input-group-btn
        a.btn.btn-default ng-disabled="info.disabled || !action.selected" ng-click="action.reset()"
          span.glyphicon.glyphicon-remove
