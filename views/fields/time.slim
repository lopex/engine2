.col-lg-3.col-md-3.col-sm-5
  .input-group.input-group-sm
    input.btn.btn-default [
      type="text"
      class="form-control"
      ng-model="value"
      ng-disabled="field.disabled"

      data-time-format="{{::field.render.format}}"
      data-animation="{{::field.render.animation}}"
      bs-timepicker=""
      e2-datepicker=""
      e2-model-format="{{::field.render.model_format}}"
      data-autoclose="1"
      data-arrow-behavior="picker"

      e2-force-view-value=""
      e2-field=""
    ]
    .input-group-btn data-toggle="datepicker"
    	a.btn.btn-default: span.glyphicon.glyphicon-time
