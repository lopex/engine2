.span ng-init="value = value || {}"
  .col-lg-3.col-md-3.col-sm-5
    .input-group.input-group-sm
      input.btn.btn-default [
        type="text"
        class="form-control"
        ng-model="value.value"
        ng-disabled="field.disabled"

        data-date-format="{{::field.render.date_format}}"
        data-animation="{{::field.render.animation}}"
        bs-datepicker=""
        e2-datepicker="value"
        e2-model-format="{{:: (field.render.date_model_format + ' ' + field.render.time_model_format)}}"
        data-autoclose="1"

        e2-force-view-value=""
        e2-field=""
      ]
      .input-group-btn
        a.btn.btn-default: span.glyphicon.glyphicon-calendar data-toggle="datepicker"
  .col-lg-3.col-md-3.col-sm-5
    .input-group.input-group-sm
      input.btn.btn-default [
        type="text"
        class="form-control"
        ng-model="value.value"
        ng-disabled="field.disabled"

        data-time-format="{{::field.render.time_format}}"
        data-animation="{{::field.render.animation}}"
        bs-timepicker=""
        e2-datepicker="value"
        e2-model-format="{{:: (field.render.date_model_format + ' ' + field.render.time_model_format)}}"
        data-autoclose="1"

        e2-force-view-value=""
      ]
      .input-group-btn
        a.btn.btn-default: span.glyphicon.glyphicon-time data-toggle="datepicker"
