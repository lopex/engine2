.col-lg-3.col-md-3.col-sm-5
  .input-group.input-group-sm
    input [
      ng-init="info = action.meta.info[f]"
      xe2-decimal-time-picker="" mode="record"
      type="text"
      class="form-control"
      xng-model="value"
      ng-model="action.record[f]"
      ng-disabled="info.disabled"

      bs-timepicker=""
      data-animation="{{::info.render.animation}}"
      data-time-format="{{::info.render.format}}"
      data-model-date-format="HHmmss"
      data-show-meridian="false"
      data-show-seconds="true"
      data-minute-step="1"
      data-second-step="1"
      data-autoclose="1"
      data-time-type="string"

      e2-field=""
    ]
    .input-group-btn data-toggle="datepicker"
    	a.btn.btn-default: span.glyphicon.glyphicon-time
