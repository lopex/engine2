.span
  .col-lg-3.col-md-3.col-sm-5
    .input-group.input-group-sm
      input.btn.btn-default [
        type="text"
        class="form-control"
        ng-model="value"
        ng-disabled="field.disabled"

        data-date-format="{{::field.render.format}}"
        data-animation="{{::field.render.animation}}"
        bs-datepicker=""
        e2-datepicker=""
        e2-model-format="{{::field.render.model_format}}"
        data-autoclose="1"

        e2-field=""
      ]
      .input-group-btn data-toggle="datepicker"
        a.btn.btn-default: span.glyphicon.glyphicon-calendar

  .col-lg-3.col-md-3.col-sm-5
    .input-group.input-group-sm
      input.btn.btn-default [
        ng-init="other_time = action.meta.fields[f].render.other_time; field = action.meta.fields[other_time]"
        type="text"
        class="form-control"
        ng-model="value"
        ng-disabled="field.disabled"

        data-time-format="{{::field.render.format}}"
        data-animation="{{::field.render.animation}}"
        bs-timepicker=""
        e2-datepicker=""
        e2-model-format="{{::field.render.model_format}}"
        data-autoclose="1"

        e2-field="{{other_time}}"
      ]
      .input-group-btn data-toggle="datepicker"
        a.btn.btn-default: span.glyphicon.glyphicon-time
